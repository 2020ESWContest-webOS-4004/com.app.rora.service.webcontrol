    <script>
        function lend_mycar(){
            
            var date = document.getElementsByClassName('day active')[0].innerText;
            var hour = document.getElementsByClassName('timepicker-hour')[0].innerText;
            var minute = document.getElementsByClassName('timepicker-minute')[0].innerText;
            var am_pm = document.getElementsByClassName('table-condensed')[3].getElementsByTagName('tr')[1].getElementsByTagName('td')[3].getElementsByTagName('button')[0].innerText;
            console.log(date + "일 " + am_pm + hour + " 시" + minute + "분");

            var method = "post";
 
    
            var form = document.createElement("form");
            form.setAttribute("method", method);
            form.setAttribute("action", "/share/lend");

            //히든으로 값을 주입시킨다.
            var parameter = {'data': date, 'hour': hour, 'minute': minute, 'am_pm': am_pm};
            for(var key in parameter) {
                var hiddenField = document.createElement("input");
                hiddenField.setAttribute("type", "hidden");
                hiddenField.setAttribute("name", key);
                hiddenField.setAttribute("value", parameter[key]);

                form.appendChild(hiddenField);
            }

            document.body.appendChild(form);
            form.submit();
        }
    </script>
    <body>
        <%- include('./lib/navigation_bar.ejs') -%>
        <div id="content">
            <h1><i class="fas fa-car"></i> 내차 빌려주기</h1>
            <hr />
            <div style="overflow:hidden;">
                <div class="form-group">
                    <div class="row">
                        <div class="col-md-8">
                            <div id="datetimepicker13"></div>
                        </div>
                    </div>
                </div>
                <script type="text/javascript">
                    $(function () {
                        $('#datetimepicker13').datetimepicker({
                            inline: true,
                            sideBySide: true
                        });
                    });
                </script>
            </div>
            <button id="RegistrationSubmit" class="btn btn-dark btn-lg btn-block mt-5" type="submit" onclick="lend_mycar();">공유하기</button>
        </div>
